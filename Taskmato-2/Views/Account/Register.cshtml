@model Taskmato_2.DTOs.RegisterDTO;

<div class="container">
    <div class="container">
        <img class="mb-4 logo-sm" src="~/Images/TaskmatoLogoTransparent.png" alt="Taskmato" />
    </div>
    <div class="container">
        <form role="form" asp-action="RegisterConfirmed" method="post" autocomplete="off">
            <div>
                <input type="email" placeholder="Email" asp-for="Email" class="form-email form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <input type="text" placeholder="Username" asp-for="Username" class="form-username form-control mt-2" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div>
                <input type="password" placeholder="Password" asp-for="Password" class="form-password form-control mt-2" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <input type="password" placeholder="Confirm Password" asp-for="PasswordConfirmation" class="form-password form-control mt-2" />
                <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn btn-sm btn-light btn-outline-dark ml-2" name="register">Register</button>
                <a class="btn btn-sm btn-light btn-outline-dark" asp-controller="Account" asp-action="Login">Go Back</a>
            </div>
        </form>
    </div>
</div>