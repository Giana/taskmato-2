@model Taskmato_2.DTOs.LoginDTO;

<div class="container">
    <div class="container">
        <img class="mb-4 logo-sm" src="~/Images/TaskmatoLogoTransparent.png" alt="Taskmato" />
    </div>
    <div>
        <div class="container">
            <form role="form" asp-action="LoginConfirmed" method="post" autocomplete="off">
                <div>
                    <input type="text" placeholder="Username" asp-for="Username" class="form-username form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div>
                    <input type="password" placeholder="Password" asp-for="Password" class="form-password form-control mt-2" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-sm btn-light btn-outline-dark ml-2" name="login">Log In</button>
                    <a class="btn btn-sm btn-light btn-outline-dark" asp-controller="Account" asp-action="Register">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>