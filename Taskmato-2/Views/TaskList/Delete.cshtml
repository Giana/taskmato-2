@model Taskmato_2.DTOs.TaskListDTO

@{
    ViewBag.Title = "Delete";
}

<div>
    <dl class="dl-horizontal">
        <div class="text-center">
            <img class="mb-4 logo-sm" src="~/Images/TaskmatoLogoTransparent.png" alt="Taskmato" />
            <h4>Delete Task List</h4>
        </div>
        <hr>
        <div class="container">
            <div class="row" id="input-row">
                <div class="col-md form-group text-center justify-content-center mx-3 py-3 rounded grey">
                    <p><strong>@Html.DisplayNameFor(model => model.Date)</strong></p>
                    <p>@Html.DisplayFor(model => model.Date)</p>
                </div>
            </div>
            <div class="row" id="button-row">
                <div class="col px-2 pt-3 pb-2 mx-3 my-3 text-center rounded grey">
                    <div class="row">
                        <div class="col">
                            <h4>Are you sure you want to delete this task list?</h4>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col form-group">
                            <div class="container text-center">
                                <form method="post" asp-controller="TaskList" asp-action="DeleteConfirmed" asp-route-taskListId="@Model.TaskListId">
                                    <div class="form-actions no-color">
                                        <input class="btn btn-dark btn-lg" type="submit" value="Delete" />
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col form-group">
                            <div class="container text-center">
                                <a class="btn btn-light btn-lg" asp-controller="TaskList" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </dl>
</div>