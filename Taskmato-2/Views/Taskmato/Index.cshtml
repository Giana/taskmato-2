@model Taskmato_2.DTOs.TaskmatoViewModel

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="row">
                <div class="col-md">
                    <div class="container-fluid">
                        <img class="mb-4 mx-auto logo" src="~/Images/TaskmatoLogoTransparent.png" alt="Taskmato" />
                        <div class="mb-2 px-2 rounded grey">
                            <table class="table">
                                @foreach (var item in Model.Taskmatos)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <a asp-controller="Taskmato" asp-action="Edit" asp-route-taskListId="@Model.TaskListId" asp-route-taskmatoId="@item.TaskmatoId">Edit</a>
                                            <a asp-controller="Taskmato" asp-action="Details" asp-route-taskListId="@Model.TaskListId" asp-route-taskmatoId="@item.TaskmatoId">Details</a>
                                            <a asp-controller="Taskmato" asp-action="Delete" asp-route-taskListId="@Model.TaskListId" asp-route-taskmatoId="@item.TaskmatoId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <hr class="my-4" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    <div class="container-fluid text-center mb-2">
                        <a asp-controller="Taskmato" asp-action="Create" asp-route-taskListId="@Model.TaskListId">Add Task</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md">
            <div class="row">
                <div class="col-md">
                    <div class="container-fluid rounded text-center mb-3 pomodoro-timer-box">
                        <h1 class="display-4 pt-4" id="timer">00:00</h1>
                        <hr class="my-4">
                        <div class="pb-4">
                            <a class="btn btn-light btn-lg px-5 my-1 custom-btn" href="#" role="button" onclick="runTimer(60 * 25)">Pomodoro</a>
                            <a class="btn btn-dark btn-lg px-5 my-1 custom-btn" href="#" role="button" onclick="runTimer(60 * 5)">Short Break</a>
                            <a class="btn btn-light btn-lg px-5 my-1 custom-btn" href="#" role="button" onclick="resetTimer()">Reset</a>
                            <a class="btn btn-dark btn-lg px-5 my-1 custom-btn" href="#" role="button" onclick="runTimer(60 * 15)">Long Break</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    <div class="container-fluid rounded pt-4 pb-4 date-box">
                        <div class="display-4 text-center">
                            <h1 id="date">@DateTime.Now.ToString("MM/dd/yyyy")</h1>
                        </div>
                        <hr class="my-4">
                        <div class="row">
                            <div class="col-xs mr-auto ml-2">
                                <a class="btn btn-lg btn-outline-dark" id="left-button" href="#" role="button"><</a>
                            </div>
                            <div class="col-xs ml-auto mr-2">
                                <a class="btn btn-lg btn-outline-dark" id="right-button" href="#" role="button">></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs">
                    <div class="container-fluid">
                        <a asp-controller="Account" asp-action="LogOut">Log Out</a>
                    </div>
                </div>s
            </div>
        </div>
    </div>
</div>
